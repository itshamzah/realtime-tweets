<div class="media border-bottom-3 border border-secondary p-2 mb-1">
  <a class="pull-left pt-2" href="https://twitter.com/<%= tweet.user_nickname %>">
    <img class="rounded-circle" src="<%= tweet.user_image %>">
  </a>
  <div class="pl-2 media-body">
    <div class="text-gray text-timeago"><small><b><%= tweet.screen_name %></b>@<%= tweet.user_nickname %> - <%= DateTime.parse(tweet.created_at).strftime("%b %C")%></small></div>
    <p class="text-tweet"><%= tweet.text %></p>
    <p>retweets: <b><%=tweet.retweet_count%></b></p>
  </div>
  <hr>
</div>